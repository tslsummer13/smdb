<h1>New Movie</h1>

<%= render 'error_messages' %>

<%= form_for(@movie) do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :year %>
  <%= f.number_field :year %>

  <%= f.label :duration %>
  <%= f.number_field :duration %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.label :director %><br />
  <%= f.collection_select :director_id, Director.all, :id, :name %>

  <div>
    <%= f.submit %>
  </div>
<% end %>


